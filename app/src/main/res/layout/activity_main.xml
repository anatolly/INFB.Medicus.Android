<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPrimary">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:windowContentOverlay">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/centerLogo"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:text="User Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorLightEditTextHint" />

        <LinearLayout
            android:id="@+id/centerLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/tvLogoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Medicus"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorLightEditTextHint" />
        </LinearLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnRippleStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/centerLogo"
            android:layout_toStartOf="@+id/centerLogo"
            android:gravity="center_horizontal"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/colorLightPrimary"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:transitionName="openStorage">

                <ImageView
                    android:id="@+id/ivStorage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_storage" />

                <TextView
                    android:id="@+id/tvStorage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLightEditTextHint" />


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnRippleSos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerLogo"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="-32dp"
            android:layout_toLeftOf="@+id/btnRippleCalendar"
            android:layout_toStartOf="@+id/btnRippleCalendar"
            android:gravity="center_horizontal"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/colorLightPrimary"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llSos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivSos"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/ic_sos2" />

                <TextView
                    android:id="@+id/tvSos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="SOS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLightEditTextHint" />


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnRippleFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerLogo"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-32dp"
            android:layout_toEndOf="@+id/btnRippleCalendar"
            android:layout_toRightOf="@+id/btnRippleCalendar"
            android:gravity="center_horizontal"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/colorLightPrimary"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivFeedback"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_feedback" />

                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLightEditTextHint" />


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnRipplePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/centerLogo"
            android:layout_toRightOf="@+id/centerLogo"
            android:gravity="center_horizontal"

            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/colorLightPrimary"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPayment"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/ic_account4" />

                <TextView
                    android:id="@+id/tvPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Account"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLightEditTextHint" />


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnRippleCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerLogo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/colorLightPrimary"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/ic_calendar" />

                <TextView
                    android:id="@+id/tvCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Calendar"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorLightEditTextHint" />


            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/AppLightTheme" />
</RelativeLayout>
