<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:foreground="?android:windowContentOverlay"
        android:layout_height="match_parent" >
        <com.github.pavlospt.CircleView

            android:layout_width="150dp"
            android:layout_height="150dp"
            app:titleText="Medicus"
            app:subtitleText=""
            android:gravity="center"
            android:layout_gravity="center"
            app:titleSize="30dp"
            app:subtitleSize="9dp"
            app:titleColor="@android:color/holo_green_dark"
            app:subtitleColor="@android:color/holo_red_dark"
            app:strokeColorValue="@android:color/darker_gray"
            app:backgroundColorValue="@android:color/darker_gray"
            app:fillColor="@color/colorLightWindowBackground"
            app:fillRadius="0.99"/>
    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize" />
</RelativeLayout>
