<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppDarkTheme" parent="AppDarkTheme.Base"/>
    <style name="AppDarkTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkSecondary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppLightTheme" parent="AppLightTheme.Base"/>
    <style name="AppLightTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimary</item>
        <item name="android:windowBackground">@color/colorLightWindowBackground</item>
        <item name="colorAccent">@color/colorLightColorAccent</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorLightColorAccent</item>
        <item name="android:textColorPrimary">@color/colorLightTextColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorLightWindowBackground</item>
        <item name="android:textColor">@color/colorLightTextColor</item>
        <item name="android:textColorHint">@color/colorLightTextColorHint</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">#fff</item>
        <item name="actionBarStyle">@style/LightToolbarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="actionMenuTextColor">#fff</item>
        <item name="android:actionMenuTextColor">#fff</item>
        <item name="mp_colorAccent">@color/colorLightPrimary</item>
        <item name="primaryLight">@color/colorLightPrimary</item>
        <item name="primaryDark">@color/colorDarkPrimary</item>


    </style>

    <style name="AppLightPreferenceTheme" parent="AppLightTheme">
        <item name="android:textColorPrimary">@color/colorLightTextMain</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorCalendarLight</item>
        <item name="colorPrimaryDark">@color/colorCalendarDark</item>
        <item name="android:windowBackground">@color/colorLightWindowBackground</item>
        <item name="colorAccent">@color/colorLightColorAccent</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorLightColorAccent</item>
        <item name="android:textColorPrimary">@color/colorLightTextColorHint</item>
        <item name="android:textColorPrimaryInverse">@color/colorLightTextColorHint</item>
        <item name="android:textColor">@color/colorLightTextColorHint</item>
        <item name="android:textColorHint">@color/colorLightTextColorHint</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">#000</item>
        <item name="actionBarStyle">@style/LightToolbarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="actionMenuTextColor">@color/colorLightTextColorHint</item>
        <item name="android:actionMenuTextColor">@color/colorLightTextColorHint</item>
        <item name="mp_colorAccent">@color/colorCalendarLight</item>
        <item name="primaryLight">@color/colorCalendarLight</item>
        <item name="primaryDark">@color/colorCalendarDark</item>


        <item name="android:textColorTertiary">#000000</item>
        <item name="android:textColorSecondaryInverse">#000000</item>
        <item name="android:textColorTertiaryInverse">#000000</item>
        <item name="android:textColorPrimaryDisableOnly">#000000</item>
        <item name="android:textColorPrimaryInverseDisableOnly">#000000</item>
        <item name="android:textColorPrimaryNoDisable">#000000</item>
        <item name="android:textColorSecondaryNoDisable">#000000</item>
        <item name="android:textColorPrimaryInverseNoDisable">#000000</item>
        <item name="android:textColorSecondaryInverseNoDisable">#000000</item>
        <item name="android:textColorHintInverse">#000000</item>




    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:windowBackground">@color/colorLightWindowBackground</item>
        <item name="colorPrimary">@color/calendar_background_period</item>
        <item name="colorPrimaryDark">#FF3232</item>
        <item name="android:textColorPrimary">@color/colorLightTextColorHint</item>
        <item name="colorControlNormal">#000</item>
    </style>






</resources>
