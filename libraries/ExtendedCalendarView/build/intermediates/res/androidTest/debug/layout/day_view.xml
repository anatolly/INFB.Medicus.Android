<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/min_cell_height"
    android:minWidth="@dimen/min_cell_width" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="@dimen/text_height_width"
            android:layout_height="@dimen/text_height_width"
            android:layout_centerInParent="true"
            android:id="@+id/today_frame"
            android:background="@drawable/today" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/text_height_width"
            android:layout_height="@dimen/text_height_width"
            android:layout_centerInParent="true"
            android:background="@drawable/date_number_background"
            android:gravity="center"
            android:text="31"
            android:textColor="@color/date_number_text_color"
            android:textSize="@dimen/text_size"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orange"
            android:layout_alignTop="@+id/today_frame"
            android:paddingLeft="@dimen/text_height_width_half"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red"
            android:layout_alignTop="@+id/today_frame"
            android:paddingLeft="@dimen/text_height_width"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purple"
            android:layout_alignTop="@+id/today_frame"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

